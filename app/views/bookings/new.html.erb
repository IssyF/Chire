<div class="booking-card container">
  <h1>Book Your Chef Experience</h1>
   <h1 class="booking-form-chef-name">with <%= @chef.user.first_name %> <%= @chef.user.last_name %>!</h1>
   <%# <div class="row justify-content-center"> %>

  <div>
    <%= simple_form_for [@chef, @booking ] do |f| %>
      <%= f.input :date, label: 'Date', as: :date %>
      <%= f.input :time, label: 'Time', as: :time %>
      <%= f.input :duration, label: 'Duration (Hours):', collection: 1..12 %>
      <%= f.submit 'Confirm Booking', class:"btn btn-success" %>
    <% end %>
  </div>

  <%= link_to chef_path(@chef) do %>
        <i class="fas fa-chevron-left back-link"></i>
  <% end %>
</div>
