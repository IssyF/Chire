<div class="container">
  <h1>My Schedule</h1>
  <% if @bookings.empty? %>
    <h5>Your schedule is currently empty</h5>
  <% else %>
    <%@bookings.each do |booking| %>
      <div class="booking-index-card">
        <h6 class="booking-index-date"><%=booking.date.strftime("%b %d, %Y") %></h6>
        <p>👤 <%=booking.user.first_name %> <%=booking.user.last_name %></p>
        <p>🏡 <%=booking.user.address%></p>
        <p>🕓 <%=booking.time.strftime("%l:%M %p") %></p>
        <p>⏳ <%=booking.duration %> hours</p>
      </div>
    <% end %>
  <% end %>
</div>
